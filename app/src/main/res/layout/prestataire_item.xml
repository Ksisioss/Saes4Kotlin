<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="@drawable/button_border">


    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/surname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/firstname1" />

    <TextView
        android:id="@+id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/firstname"
        app:layout_constraintTop_toTopOf="@+id/firstname"
        tools:text="@string/surname1" />


    <TextView
        android:id="@+id/standName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/firstname"
        app:layout_constraintTop_toBottomOf="@+id/firstname"
        tools:text="@string/nameStand1" />

    <TextView
        android:id="@+id/categoryProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/standName"
        app:layout_constraintTop_toBottomOf="@+id/standName"
        tools:text="@string/activite" />

    <TextView
        android:id="@+id/description"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/categoryProfil"
        app:layout_constraintTop_toBottomOf="@+id/categoryProfil"
        tools:text="@string/textPrestataire1" />


    <Button
        android:id="@+id/voirPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voir_plus"
        app:layout_constraintStart_toStartOf="@+id/imagePrestataire"
        app:layout_constraintEnd_toEndOf="@+id/imagePrestataire"
        app:layout_constraintTop_toBottomOf="@+id/imagePrestataire"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/imagePrestataire"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/prestataire_1"
        android:contentDescription="@string/image_prestataire_profil" />

</androidx.constraintlayout.widget.ConstraintLayout>